<Configuration monitorInterval="30" >
    <Appenders>
        <Console
                name="console"
                target="SYSTEM_OUT">
            <PatternLayout pattern="driver    %5p %C:%L %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
